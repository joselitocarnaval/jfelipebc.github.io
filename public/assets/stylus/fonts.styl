@font-face
  font-family 'icofont'
  src url('../fonts/icofont.eot?-wourf8')
  src url('../fonts/icofont.eot?#iefix-wourf8') format('embedded-opentype'),
 url('../fonts/icofont.woff?-wourf8') format('woff'),
		url('../fonts/icofont.ttf?-wourf8') format('truetype'),
		url('../fonts/icofont.svg?-wourf8#icofont') format('svg')
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
  font-family 'icofont'
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon-facebook
  &:before
    content "\ea8d"

.icon-instagram
  &:before
    content "\ea90"

.icon-twitter
  &:before
    content "\ea92"

.icon-github
  &:before
    content "\eab1"

.icon-linkedin
  &:before
    content "\eac8"
